{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row wrapper wrapper-content animated fadeInRight">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <h4 class="text-center">Ajouter un article</h4>
                        &nbsp;
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                            <div class="form-group">
                                <label for="{{ form.label.vars.id }}" class="col-sm-2 control-label">{{ "Label" | trans }} <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.label, {'attr': {'class': 'form-control'}}) }}
                                    <span class="text-danger">{{ form_errors(form.label) }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="{{ form.amountHt.vars.id }}" class="col-sm-2 control-label">{{ "Montant HT" | trans }} <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.amountHt, {'attr': {'class': 'form-control'}}) }}
                                    <span class="text-danger">{{ form_errors(form.amountHt) }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="{{ form.rate.vars.id }}" class="col-sm-2 control-label">{{ "Taux de TVA" | trans }} <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.rate, {'attr': {'class': 'form-control'}}) }}
                                    <span class="text-danger">{{ form_errors(form.rate) }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="{{ form.description.vars.id }}" class="col-sm-2 control-label">{{ "Description" | trans }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <input type="submit" value="Sauvegarder" />
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
