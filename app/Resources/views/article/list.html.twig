{% extends "base.html.twig" %}

{% block body %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h4>Liste des articles</h4>
                </div>
                <a href="{{ path('article_add') }}" class="btn btn-primary btn-sm">Ajouter un article</a>
                <div class="ibox-content">
                    <div>
                        <table class="table table-hover">
                            <tbody>
                            {% for article in articles %}
                                <tr>
                                    <th>Label</th>
                                    <th>Description</th>
                                    <th>Montant HT</th>
                                    <th>Montant TTC</th>
                                </tr>
                                <tr>
                                    <td>{{ article.label }}</td>
                                    <td>{% if article.description %}{{ article.description }}{% endif %}</td>
                                    <td>{{ article.amountHt|number_format(2, ',') }}</td>
                                    <td>{{ article.amountHt * article.rate.value }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>Aucun article Ã  afficher</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
